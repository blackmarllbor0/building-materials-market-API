{
  "name": "building-materials-market",
  "version": "1.0.0",
  "description": "API for builder material market",
  "main": "main.js",
  "scripts": {
    "run": "npm run build && node dist/main.js",
    "dev": "npx nodemon ./src/main.ts",
    "build": "tsc",
    "up_db": "docker-compose up -d",
    "migrate_up": "npx knex migrate:latest",
    "migrate_down": "npx knex migrate:rollback",
    "lint": "eslint",
    "format": "prettier --write .",
    "gen:spec": "npx speccy resolve ./src/openapi/docs/openapi.yaml -o ./openapi.yaml"
  },
  "author": "blackmarllbor0",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.6",
    "knex": "^2.5.1",
    "openapi-types": "^12.1.3",
    "oracledb": "^6.1.0",
    "speccy": "^0.11.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.5.9",
    "@types/oracledb": "^5.3.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1"
  }
}
